{
  "compilerOptions": {
    "target": "es2021",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
    }
  },
  // "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": [
    "./src/",
    "./test/"
  ],
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": [
      "tsconfig-paths/register"
    ]
  }
}