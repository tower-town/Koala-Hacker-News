{
  "compilerOptions": {
    "target": "es2021",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
    }
  },
  // "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": [
    "./src/",
    "./test/"
  ]
}